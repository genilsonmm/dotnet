<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppCadastro.MainPage">

    <StackLayout Padding="10">

        <Entry x:Name="txtNome" Placeholder="Digite o nome" />
        <Button Margin="10" x:Name="btnCadastrar" Text="Cadastrar" Clicked="btnCadastrar_Clicked" />
        
        <ListView x:Name="lstUsuarios" ItemSelected="lstUsuarios_ItemSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ImageCell TextColor="White" Text="{Binding Nome}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        
    </StackLayout>

</ContentPage>
