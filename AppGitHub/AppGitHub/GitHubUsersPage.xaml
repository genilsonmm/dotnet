<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppGitHub.GitHubUsersPage"
             Title="GitHubUsersPage">
    <StackLayout>
        <ListView x:Name="lstUsers" ItemSelected="lstUsers_ItemSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ImageCell 
                        ImageSource="{ Binding Avatar_url }"
                        Text="{Binding Login }" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>