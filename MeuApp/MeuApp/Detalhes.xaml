<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MeuApp.Detalhes"
             Title="Detalhes">
    <StackLayout Orientation="Vertical">
        <Label 
            Text="Estamos em Detalhes"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button x:Name="btnVoltar" 
                Margin="10"
                FontSize="20" 
                Text="Voltar" 
                Clicked="btnVoltar_Clicked" />

        <Entry x:Name="entNome" Placeholder="Digite seu nome" />

        <Button x:Name="btnAlert" Text="Atenção" Clicked="btnAlert_Clicked"/>
    </StackLayout>
</ContentPage>